@model IEnumerable<BusinessEntities.AlbumEntity> 
@{
    ViewBag.Title = "ViewIndex";
}

<div class="title_box">
	<a href="#">ALBUM</a>
    <span class="fa fa-angle-right"></span>
    <a href="#"></a>
</div>

<div class="album-page">
    <ul class="album-list">
        @foreach (var item in Model)
        {
            <li>
                 <a class="thumbnail" href="#" onmouseover="">
                    <span class="fa fa-play-circle play-icon"> </span>
			        <img src="../../Images/@Html.DisplayFor(modelItem => item.AlbumProducts.FirstOrDefault().Product.Thumbnail)" />
		         </a>
                 <div class="description">
			         <h3>
                         @*<a href="/home/playalbum?id=@item.Id">@Html.DisplayFor(modelItem => item.Tittle)</a>*@
                         @Html.ActionLink(item.Tittle, "PlayAlbum", "Home", new { albumId = item.Id }, null)
			         </h3>
			         <h4>
@*                         <a href="#">@Html.DisplayFor(modelItem => item.AlbumProducts.FirstOrDefault().Product.ArtistProduct.StageName)</a>*@
                         @Html.ActionLink(item.AlbumProducts.FirstOrDefault().Product.ArtistProduct.StageName, "ViewArtist", "ArtistProduct", new { artistId = item.AlbumProducts.FirstOrDefault().Product.ArtistProduct.Id }, null)

			         </h4>
                 </div>
            </li>
        }
    </ul>
</div>

<script type="text/javascript">
</script>