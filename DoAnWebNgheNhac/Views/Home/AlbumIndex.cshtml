@model IEnumerable<BusinessEntities.AlbumEntity> 
@{
    ViewBag.Title = "ViewIndex";
}

<div class="content col-left">

@if(Model.Count() > 0)
{

<div class="title_box">
	ALBUM
    <span class="fa fa-angle-right"></span>
    @Html.ActionLink(@Html.Action("GetAlbumNameById", new { id = @Model.First().ParentId}).ToString(), "AlbumIndex", "Home", new { Id = @Model.First().Id }, null)
</div>

<div class="album-page">
    <ul class="album-list">
        @foreach (var item in Model)
        {
            <li>
                 <a class="thumbnail" href="#" onmouseover="">
                    <span class="fa fa-play-circle play-icon"> </span>
			        <img src="../../Images/@Html.DisplayFor(modelItem => item.AlbumProducts.FirstOrDefault().Product.Thumbnail)" />
		         </a>
                 <div class="description">
			         <h3>
                         @Html.ActionLink(item.Tittle, "PlayAlbum", "Home", new { albumId = item.Id }, null)
			         </h3>
			         <h4>
                        <a href="#">@Html.DisplayFor(modelItem => item.AlbumProducts.FirstOrDefault().Product.ArtistProduct.StageName)</a>
                         @*@Html.ActionLink(item.AlbumProducts.FirstOrDefault().Product.ArtistProduct.StageName, "ViewArtist", "ArtistProduct", new { artistId = item.AlbumProducts.FirstOrDefault().Product.ArtistProductId}, null)*@

			         </h4>
                 </div>
            </li>
        }
    </ul>
</div>
}
else {
    <div class="title_box">
	    Rất tiết không có bài nào trong mục này.
    </div>
}

</div>

<script type="text/javascript">
</script>