@model IEnumerable<BusinessEntities.ProductEntity>
@{
    ViewBag.Title = "SearchIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtistProduct.StageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Nghe Nhac
        </th>
        <th>
            Xem Video
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thumbnail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Views)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistProduct.StageName)
            </td>
            <td>
                @*@Html.ActionLink(@item.Name, "PlayMusic", "Home", new { @id = item.Id })*@
               @item.Name
            </td>
            <td>
                 <a href="/home/PlayMusic?id=@item.Id">Nghe Nhac</a>
            </td>
            <td>
                <a href="/home/PlayVideo?id=@item.Id">Xem Video</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thumbnail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Views)
            </td>
        </tr>
    }

</table>
