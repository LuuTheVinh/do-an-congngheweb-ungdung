@model IEnumerable<BusinessEntities.VideoProductEntity> 
@{
    ViewBag.Title = "ViewIndex";
}

<div class="title_box">
	<a href="#">Video</a>
    <span class="fa fa-angle-right"></span>
    <a href="#"></a>
</div>

<div class="album-page">
    <ul class="album-list">
        @foreach (var item in Model)
        {
            <li>
                 <a class="thumbnail" href="#" onmouseover="">
                    <span class="fa fa-play-circle play-icon"> </span>
			        <img src="../../Images/@Html.DisplayFor(modelItem => item.Product.Thumbnail)" />
		         </a>
                 <div class="description">
			         <h3><a href="/home/playvideo?id=@item.ProductId">@Html.DisplayFor(modelItem => item.Product.Name)</a></h3>
			         <h4><a href="#">@Html.DisplayFor(modelItem => item.Product.ArtistProduct.StageName)</a></h4>
                 </div>
            </li>
        }
    </ul>
</div>

<script type="text/javascript">
</script>