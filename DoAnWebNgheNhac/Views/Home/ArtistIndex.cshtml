@model IEnumerable<BusinessEntities.ArtistEntity> 
@{
    ViewBag.Title = "ViewIndex";
}

<div class="content col-left">

@if(Model.Count() > 0)
{

<div class="title_box">
	NGHỆ SĨ
    <span class="fa fa-angle-right"></span>
   @* @Html.ActionLink(@Html.Action("GetArtistNameById", new { id = @Model.First().Artist.ParentId}).ToString(), "ArtistIndex", "Home", new { Id = @Model.First().Artist.ParentId }, null)*@
</div>

<div class="album-page">
    <ul class="album-list">
        @foreach (var item in Model)
        {
            <li>
                 <a class="thumbnail" href="#" onmouseover="">
                    <span class="fa fa-play-circle play-icon"> </span>
			        <img src="@Html.DisplayFor(modelItem => item.ArtistProducts.FirstOrDefault().Thumbnail)" />
		         </a>
                 <div class="description">
			         @*<h3><a href="/home/playalbum?id=@item.Id">@Html.DisplayFor(modelItem => item.Tittle)</a></h3>*@
			         <h4><a href="/ArtistProduct/ViewArtist?artistId=@item.ArtistProducts.FirstOrDefault().Id">@Html.DisplayFor(modelItem => item.ArtistProducts.FirstOrDefault().StageName)</a></h4>
                 </div>
            </li>
        }
    </ul>
</div>
    
}
else {
    <div class="title_box">
	    Rất tiết không có bài nào trong mục này.
    </div>
}

</div>

