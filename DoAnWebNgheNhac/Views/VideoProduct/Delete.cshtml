@model DataModel.VideoProduct

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="setting-title">
    <h2 class="title_box">Xóa @Html.DisplayFor(model => model.Product.Name)</h2>
</div> 

<fieldset class="col-4 border-box">
    <legend></legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Product.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Product.Name)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Video.Tittle)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Video.Tittle)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="setting-title">
        
        <h3 class="title_box">Are you sure you want to delete this?</h3>

        <input class="button red-button" type="submit" value="Xóa" />
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "button", @style="margin-left: 10px;"})
    </div>
}
