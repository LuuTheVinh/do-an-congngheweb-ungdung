@model IEnumerable<BusinessEntities.ProductEntity>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="setting-title">
        <h2 class="title_box">Danh sách bài hát</h2>
        @Html.ActionLink("Thêm mới", "Create", null , new {@class = "button"})
</div>  

@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <div>
        Tìm theo tên: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm"/>
    </div>
}
<table>
    <tr>
        <th class="col-1">
            @* @Html.DisplayNameFor(model => model.Thumbnail) *@
            Ảnh
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.Name) *@
            Tên
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.Category) *@
            Thể loại
        </th>
        <th class="col-1">
            @* @Html.DisplayNameFor(model => model.URL) *@
            Url
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.Views) *@
            Lượt nghe
        </th>
        <th class="col-2"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Thumbnail)" width="50" height="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Views)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
