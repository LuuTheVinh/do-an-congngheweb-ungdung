@model IEnumerable<BusinessEntities.ProductEntity>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="setting-title">
        <h2 class="title_box">Danh sách</h2>
        @Html.ActionLink("Thêm mới", "Create", null , new {@class = "button"})
</div>  

@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <div>
        Tìm theo tên: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm"/>
    </div>
}
<table>
    <tr>
        <th class="col-1">
            @* @Html.DisplayNameFor(model => model.Thumbnail) *@
            Ảnh
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.Name) *@
            Tên
        </th>
        <th class="col-1">
            @* @Html.DisplayNameFor(model => model.Category) *@
            Loại
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.URL) *@
            Url
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.Views) *@
            Lượt nghe
        </th>
        <th class="col-2"></th>
    </tr>

    @{
        var models = Model;
        
        if(Request.QueryString.HasKeys())
        {
            models = Model.TakeWhile(m => m.Category.Trim() == Request.QueryString["type"].ToLower());
            
        }
            
    }

@foreach (var item in Model)
{
    <tr>
        <td style="padding: 2px;">
            <img src="@Html.DisplayFor(modelItem => item.Thumbnail)" style="display: block;" width="100" height="100"/>
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id=item.Id }, new { @style="display: block;" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            <a href="@Html.DisplayFor(modelItem => item.URL)">@item.URL.Substring(0, 20) ...</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Views)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id }) | 
            @Html.ActionLink("Xem", "PlayMusic", "Home", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
