@model IEnumerable<BusinessEntities.ProductEntity>

<ul>
    @foreach (var item in Model)
    {
        <li>
		    <a class="thumbnail thumb-small" href="#">
                <span class="fa fa-play-circle play-icon"> </span>
			    <img src="/Images/@item.Thumbnail">
		    </a>
		    <div class="description">
			    <h3><a href="/home/PlayVideo?id=@item.Id">@item.Name</a></h3>
			    <h4><a href="/ArtistProduct/ViewArtist?artistId=@item.ArtistProductId">@item.ArtistProduct.StageName</a></h4>
            </div>
	    </li>
    }
</ul>