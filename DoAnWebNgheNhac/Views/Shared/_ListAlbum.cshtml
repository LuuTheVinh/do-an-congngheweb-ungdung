@model IEnumerable<BusinessEntities.AlbumProductEntity>

<ul>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
			<li>
				<a class="thumbnail" href="#">
                    <span class="fa fa-play-circle play-icon"> </span>
					<img src="@item.Product.Thumbnail" />
                        
				</a>
                    
                <div class="description">
					<h3><a href="/albumproduct/@item.Id">@Html.DisplayFor(modelItem => item.Product.Name)</a></h3>
					<h4><a href="/artistproduct/@item.Product.ArtistProductId">@Html.DisplayFor(modelItem => item.Product.ArtistProduct.StageName)</a></h4>
                </div>
			</li>
            }
    }
</ul>
