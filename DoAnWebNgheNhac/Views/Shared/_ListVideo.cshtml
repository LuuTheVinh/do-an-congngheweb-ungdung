@model IEnumerable<BusinessEntities.VideoProductEntity>

<ul>
    @foreach (var item in Model)
    {
        <li>
		    <a class="thumbnail thumb-small" href="#">
                <span class="fa fa-play-circle play-icon"> </span>
			    <img src="@item.Product.Thumbnail">
		    </a>
		    <div class="description">
			    <h3><a href="/home/PlayVideo?id=@item.Product.Id">@item.Product.Name</a></h3>
			    <h4><a href="/ArtistProduct/ViewArtist?artistId=@item.Product.ArtistProductId">@item.Product.ArtistProduct.StageName</a></h4>
            </div>
	    </li>
    }
</ul>