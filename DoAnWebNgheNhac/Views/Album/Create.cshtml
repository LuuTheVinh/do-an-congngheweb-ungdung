@model BusinessEntities.AlbumEntity

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="setting-title">
    <h2 class="title_box">Tạo Album Category</h2>
</div>  

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="col-4">
        <div class="editor-label">
            @* @Html.LabelFor(model => model.Tittle) *@
            Tên
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tittle)
            @Html.ValidationMessageFor(model => model.Tittle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParentId)
        </div>
        <div class="editor-field">
            @*@Html.EditorFor(model => model.ParentId)*@
            @Html.DropDownList("ParentId", string.Empty)
            @Html.ValidationMessageFor(model => model.ParentId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Level)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Level)
            @Html.ValidationMessageFor(model => model.Level)
        </div>

        <div class="editor-field">
            <input class="button" type="submit" value="Tạo" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "button red-button"})
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
