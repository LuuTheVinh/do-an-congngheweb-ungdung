@model IEnumerable<BusinessEntities.AlbumEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrap">
    <div class="setting-title">
        <h2 class="title_box">Mục Album</h2>
        @Html.ActionLink("Thêm mới", "Create", null , new {@class = "button"})
    </div>  
    <table>
        <tr>
            <th class="col-5">
                @*@Html.DisplayNameFor(model => model.Tittle)*@
                Tên
            </th>
            <th class="col-1">
                @*@Html.DisplayNameFor(model => model.Level)*@
                Cấp
            </th>
            <th class="col-2"></th>
        </tr>
        @if(Model!=null)
        {
            foreach (var item in Model) {
                <tr>
                    <td>
                        <a style="display: block;" href="/album/details/@item.Id">@Html.DisplayFor(modelItem => item.Tittle)</a> 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>
                </tr>
            }
        }
    </table>

</div>

<div class="clear"></div>
