@model IEnumerable<BusinessEntities.AlbumProductEntity> 
@{
    ViewBag.Title = "ViewIndex";
}

<div class="title_box">
	<a href="#">ALBUM</a>
    <span class="fa fa-angle-right"></span>
    <a href="#">VIỆT NAM</a>
</div>

<div class="album-page">
    <ul class="album-list">
        @foreach (var item in Model)
        {
            <li>
                 <a class="thumbnail" href="#" onmouseover="">
                    <span class="fa fa-play-circle play-icon"> </span>
			        <img src="@item.Product.Thumbnail">
		         </a>
                 <div class="description">
			         <h3><a href="#">@Html.DisplayFor(modelItem => item.Album.Tittle)</a></h3>
			         <h4><a href="#">@Html.DisplayFor(modelItem => item.Product.ArtistProduct.StageName)</a></h4>
                 </div>
            </li>
        }
    </ul>
</div>

