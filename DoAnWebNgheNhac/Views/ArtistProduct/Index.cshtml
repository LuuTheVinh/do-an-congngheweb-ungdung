@model IEnumerable<BusinessEntities.ArtistProductEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="setting-title">
        <h2 class="title_box">Danh sách nghệ sĩ</h2>
        @Html.ActionLink("Tạo mới", "Create", null , new {@class = "button"})
</div>  

<table>
    <tr>
        <th class="col-1">
            @* @Html.DisplayNameFor(model => model.Thumbnail) *@
            Ảnh
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.Artist.Tittle) *@
            Tên
        </th>
        <th class="col-1">
            @* @Html.DisplayNameFor(model => model.BirthDay) *@
            Ngày sinh
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.Gender) *@
            Giới tính
        </th>
        <th class="col-2">
            @* @Html.DisplayNameFor(model => model.Country) *@
            Quốc tịch
        </th>
        <th class="col-2"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Thumbnail)" width="50" height="50"> 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.Tittle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
