@model DoAnWebNgheNhac.Models.LoginModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="setting-title">
    <h2 class="title_box">Đăng nhập</h2>
</div> 

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="border-box col-4" >
        <legend></legend>
        <div class="editor-label">
            Tên tài khoản
        </div>
        <div class="editor-field">
           @Html.TextBoxFor(m => m.UserName)
        </div>

        <div class="editor-label">
            Mật khẩu
        </div>
        <div class="editor-field">
           @Html.TextBoxFor(m => m.Password)
        </div>

        <div class="editor-field">
            @Html.CheckBoxFor(m => m.RememberMe)
            Ghi nhớ
        </div>

        <input class="button" type="submit" value="Đăng nhập" />
    </fieldset>
    
<div class="setting-title">
        Không có Tài khoản? <span style ="color: blue">@Html.ActionLink("Đăng Ký", "Register")</span>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
