@model IEnumerable<BusinessEntities.ArtistEntity>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="setting-title">
    @if (Model.Count() > 0)
        { 
            <h2 class="title_box">Chi tiết @Html.Action("GetNameById", new { id = Model.First().ParentId })</h2>
        }
        else
        {
            <h2 class="title_box">Chi tiết</h2>
        }

    @Html.ActionLink("Thêm mới", "Create", "Artist" , new {@class = "button"})
    @Html.ActionLink("Quay lại", "Index",null , new {@class = "button", @style="margin-left: 10px;"})
</div>  

@* <p>@Html.ActionLink("Create New", "Create", "Artist")</p> *@

<table>
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Tittle)*@
            Tên
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Level)*@
            Cấp
        </th>
        <th></th>
    </tr>
@if (Model!= null)
{
    foreach (var item in Model) {
            <tr>
                <td>
                    @Html.ActionLink(item.Tittle, "Details", new { id = item.Id }, new { @style="display: block;"})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
            </tr>
        }
}
